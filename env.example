# ====================================
# TON API Indexer Configuration
# ====================================

# API Configuration (обязательно)
TONAPI_KEY=your_api_key_here

# API Endpoints (опционально)
TONAPI_GRAPHQL_URL=https://tonapi.io/v2/graphql
TONAPI_REST_URL=https://tonapi.io/v2

# File Paths (опционально)
CURSOR_FILE_PATH=./cursor.txt
DATA_DIRECTORY=./data

# Performance Settings (опционально)
MAX_CONCURRENT_REQUESTS=4
REQUEST_DELAY_MS=100
ACCOUNTS_PER_PAGE=100

# Retry Logic (опционально)
MAX_RETRIES=3
RETRY_DELAY_MS=1000

# Logging (опционально)
LOG_LEVEL=info
LOG_PRETTY=false

# ====================================
# Infinite Mode (опционально)
# ====================================

# Задержки и таймауты для бесконечного режима  
INFINITE_ITERATION_DELAY_MS=5000
INFINITE_ERROR_DELAY_MS=30000
INFINITE_MAX_ITERATIONS=0 